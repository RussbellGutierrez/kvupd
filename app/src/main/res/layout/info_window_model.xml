<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bubble">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnr_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                tools:text="NOMBRE CLIENTE"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"/>

            <TextView
                android:id="@+id/txt_domicilio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="2"
                android:paddingVertical="2dp"
                tools:text="DIRECCION CLIENTE"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"/>

            <TextView
                android:id="@+id/txt_negocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="2dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|center"
                app:drawableLeftCompat="@drawable/notf_negocio"
                app:drawableTint="@color/magenta"
                tools:text="NEGOCIO CLIENTE" />

            <TextView
                android:id="@+id/txt_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="2dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|center"
                app:drawableLeftCompat="@drawable/telefono"
                app:drawableTint="@color/magenta"
                tools:text="TELEFONO CLIENTE"/>

            <TextView
                android:id="@+id/txt_longitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="2dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|center"
                app:drawableLeftCompat="@drawable/longitud"
                app:drawableTint="@color/magenta"
                tools:text="LONGITUD"/>

            <TextView
                android:id="@+id/txt_latitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="2dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|center"
                app:drawableLeftCompat="@drawable/latitud"
                app:drawableTint="@color/magenta"
                tools:text="LATITUD"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_motivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/primaryColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_motivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:text="MOTIVO"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_vendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_vendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/darkgreen"
                android:textStyle="bold"
                tools:text="NOMBRE VENDEDOR"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/txt_precision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="2dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|center"
                app:drawableLeftCompat="@drawable/gps"
                app:drawableTint="@color/marineblue"
                tools:text="PRECISION"/>

            <TextView
                android:id="@+id/txt_bateria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="2dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|center"
                app:drawableLeftCompat="@drawable/bateria"
                app:drawableTint="@color/marineblue"
                tools:text="BATERIA"/>

            <TextView
                android:id="@+id/txt_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="2dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|center"
                app:drawableLeftCompat="@drawable/hora"
                app:drawableTint="@color/marineblue"
                tools:text="FECHA Y HORA"/>

            <TextView
                android:id="@+id/txt_long_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="2dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|center"
                app:drawableLeftCompat="@drawable/longitud"
                app:drawableTint="@color/marineblue"
                tools:text="LONGITUD"/>

            <TextView
                android:id="@+id/txt_lati_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="2dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|center"
                app:drawableLeftCompat="@drawable/latitud"
                app:drawableTint="@color/marineblue"
                tools:text="LATITUD"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>