<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.FMapa">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_centrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fab_ubicacion"
            android:layout_alignStart="@+id/fab_ubicacion"
            android:layout_marginBottom="10dp"
            android:src="@drawable/centrar"
            app:backgroundTint="@color/white"
            app:elevation="1dp"
            app:rippleColor="@color/lightgray"
            app:tint="@color/primaryDarkColor"
            app:useCompatPadding="true" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:src="@drawable/gps"
            app:backgroundTint="@color/white"
            app:elevation="1dp"
            app:rippleColor="@color/lightgray"
            app:tint="@color/primaryDarkColor"
            app:useCompatPadding="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_filtro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:visibility="gone"
            app:chipBackgroundColor="@color/dodgerblue"
            tools:text="TEXTO QUE INDICA EL FILTRO"/>

    </RelativeLayout>

</RelativeLayout>